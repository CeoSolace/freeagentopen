// prisma/schema.prisma - Robust models, indexes for perf
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  OWNER
}

enum Plan {
  FREE
  PRO
  ULT
}

enum ListingStatus {
  PENDING
  ACTIVE
  SOLD
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  billingStatus BillingStatus?

  @@index([email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PricingConfig {
  id          String @id @default(cuid())
  name        String
  description String
  basePrice   Float
  currency    String @default("usd")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  players     Player[]

  @@index([slug])
}

model Player {
  id       String  @id @default(cuid())
  name     String
  slug     String  @unique
  position String?
  teamId   String
  team     Team    @relation(fields: [teamId], references: [id])
  listings Listing[]

  @@index([slug])
  @@index([teamId])
}

model Listing {
  id          String        @id @default(cuid())
  title       String
  description String?
  price       Float
  status      ListingStatus @default(PENDING)
  playerId    String
  player      Player        @relation(fields: [playerId], references: [id])

  @@index([playerId])
  @@index([status])
}

model BillingStatus {
  id                   String   @id @default(cuid())
  userId               String   @unique
  plan                 Plan     @default(FREE)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  since                DateTime @default(now())
  until                DateTime?
  chatsWeekStart       DateTime?
  chatsStartedThisWeek Int      @default(0)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id])

  @@index([userId])
}
